        },
        {
          "name": "Add Platform",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:8080/api/lookups/platforms", "host": ["localhost"], "port": "8080", "path": ["api", "lookups", "platforms"] },
            "body": { "mode": "raw", "raw": "{ \"name\": \"Amazon\" }" }
          }
        },
        {
          "name": "Get Statuses",
          "request": { "method": "GET", "url": { "raw": "http://localhost:8080/api/lookups/statuses", "host": ["localhost"], "port": "8080", "path": ["api", "lookups", "statuses"] } }
        },
        {
          "name": "Add Status",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:8080/api/lookups/statuses", "host": ["localhost"], "port": "8080", "path": ["api", "lookups", "statuses"] },
            "body": { "mode": "raw", "raw": "{ \"name\": \"ORDERED\" }" }
          }
        },
        {
          "name": "Get Mediators",
          "request": { "method": "GET", "url": { "raw": "http://localhost:8080/api/lookups/mediators", "host": ["localhost"], "port": "8080", "path": ["api", "lookups", "mediators"] } }
        },
        {
          "name": "Add Mediator",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:8080/api/lookups/mediators", "host": ["localhost"], "port": "8080", "path": ["api", "lookups", "mediators"] },
            "body": { "mode": "raw", "raw": "{ \"name\": \"John - WhatsApp 98765\" }" }
          }
        }
      ]
    }
  ]
}
